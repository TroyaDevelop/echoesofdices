{
  "name": "eotd20-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "prepare:dist": "mkdir -p dist/assets && cp index.html dist/index.html && if [ -d ../public ]; then cp -r ../public/. dist/; fi",
    "build:css": "postcss src/styles.css -o dist/assets/styles.css",
    "build:js": "API_URL=${API_URL:-http://localhost:5017/api}; esbuild src/main.jsx --bundle --minify --sourcemap --outdir=dist/assets --jsx=automatic --jsx-import-source=react --loader:.png=file --loader:.jpg=file --loader:.jpeg=file --loader:.svg=file --define:process.env.NODE_ENV=\\\"production\\\" --define:__API_URL__=\\\"$API_URL\\\"",
    "build": "npm run clean && npm run prepare:dist && npm run build:css && npm run build:js",
    "dev:css": "postcss src/styles.css -o dist/assets/styles.css --watch",
    "dev:js": "FRONTEND_PORT=${FRONTEND_PORT:-3017}; API_URL=${API_URL:-http://localhost:5017/api}; esbuild src/main.jsx --bundle --sourcemap --outdir=dist/assets --servedir=dist --serve=$FRONTEND_PORT --watch --jsx=automatic --jsx-import-source=react --loader:.png=file --loader:.jpg=file --loader:.jpeg=file --loader:.svg=file --define:__API_URL__=\\\"$API_URL\\\"",
    "dev": "npm run clean && npm run prepare:dist && concurrently -n css,js -c magenta,cyan \"npm run dev:css\" \"npm run dev:js\""
  },
  "dependencies": {
    "@tiptap/extension-bubble-menu": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-table": "^3.19.0",
    "@tiptap/extension-table-cell": "^3.19.0",
    "@tiptap/extension-table-header": "^3.19.0",
    "@tiptap/extension-table-row": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "dompurify": "^3.3.1",
    "html-to-image": "^1.11.13",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "concurrently": "^9.2.0",
    "esbuild": "^0.24.2",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3"
  }
}
